<div class="container mt-4">
  <h2 class="mb-4">Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group mb-3">
      <%= f.label :email, "Электронная почта", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password, "Пароль", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :password_confirmation, "Подтверждение пароля", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :admin, class: "form-check-input" %>
      <%= f.label :admin, "Я хочу быть администратором", class: "form-check-label" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
