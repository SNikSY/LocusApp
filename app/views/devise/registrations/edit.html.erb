<div class="profile-container">
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "profile-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="profile-section">
      <div class="profile-avatar">
      <%= image_tag(resource.avatar.attached? ? url_for(resource.avatar) : "userpic.png", class: "avatar-image") %>

        <label for="avatar-upload" class="avatar-label"> 
        <%= f.file_field :avatar, id: "avatar-upload", class: "avatar-input" %>

        </label>
      </div>

      <div class="profile-fields">
        <div class="field-group">
          <%= f.label :name, "Ваше имя", class: "field-label" %>
          <%= f.text_field :name, class: "field-input" %>
        </div>

        <div class="field-group">
          <%= f.label :nickname, "Ваш ник", class: "field-label" %>
          <%= f.text_field :nickname, class: "field-input" %>
        </div>

        <div class="field-group">
          <%= f.label :email, "Ваша почта", class: "field-label" %>
          <%= f.email_field :email, class: "field-input" %>
        </div>

        <div class="field-group">
          <%= f.label :city, "Город", class: "field-label" %>
          <%= f.select :city, ["Москва", "Санкт-Петербург", "Казань", "Новосибирск"], { prompt: "Выберите город" }, class: "field-select" %>
        </div>
      </div>
    </div>

    <div class="profile-password-section">
      <div class="field-group">
        <%= f.label :password, "Пароль", class: "field-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "field-input" %>
      </div>

      <div class="field-group">
        <%= f.label :password_confirmation, "Подтверждение пароля", class: "field-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-input" %>
      </div>

      <div class="field-group">
        <%= f.label :current_password, "Текущий пароль", class: "field-label" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "field-input" %>
      </div>
    </div>

    <div class="profile-actions">
      <%= f.submit "Сохранить", class: "save-button" %>
      <%= link_to "Отмена", root_path, class: "cancel-button" %>
    </div>
  <% end %>

  <div class="delete-account-section">
    <h3>Удалить аккаунт</h3>
    <%= button_to "Удалить", registration_path(resource_name), method: :delete, data: { confirm: "Вы уверены, что хотите удалить аккаунт?" }, class: "delete-button" %>
  </div>
</div>
