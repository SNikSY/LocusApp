<div class="container">
  <h2 class="mb-4">Редактирование темы</h2>

  <% if @topic.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h4><%= pluralize(@topic.errors.count, "ошибка") %>:</h4>
      <ul class="mb-0">
        <% @topic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@topic) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :title, "Заголовок темы", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :description, "Описание темы", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 5 %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :category_id, "Категория", class: "form-label" %>
      <%= f.collection_select :category_id, Category.all, :id, :title, 
          { include_blank: true }, 
          { class: "form-select" } %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :location_id, "Локация", class: "form-label" %>
      <%= f.collection_select :location_id, Location.all, :id, :name,
          { include_blank: true },
          { class: "form-select" } %>
    </div>

    <div class="form-group">
      <%= f.submit "Обновить тему", class: "btn btn-primary" %>
      <%= link_to 'Назад', topic_path(@topic), class: "btn btn-secondary ms-2" %>
    </div>
  <% end %>
</div>
