<h2>Редактирование темы</h2>

<% if @topic.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@topic.errors.count, "ошибка") %>:</h2>
    <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@topic) do |f| %>
  <div class="field">
    <%= f.label :title, "Заголовок темы" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description, "Описание темы" %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :category_id, "Категория" %><br />
    <%= f.collection_select :category_id, Category.all, :id, :title, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :location_id, "Локация" %><br />
    <%= f.collection_select :location_id, Location.all, :id, :name, include_blank: true %>
  </div>

  <div class="actions">
    <%= f.submit "Обновить тему" %>
  </div>
<% end %>

<%= link_to 'Назад', topic_path(@topic) %>
